{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
			"indent": ["error", "tab"],
			"no-tabs": [0],
			"react/jsx-indent": ["error", "tab"],
			"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}